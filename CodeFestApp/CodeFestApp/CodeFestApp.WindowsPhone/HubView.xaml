<Page x:Class="CodeFestApp.HubView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>
        <Hub Background="{ThemeResource HubBackgroundImageBrush}"
             DefaultSectionIndex="{Binding ActiveSection}"
             SectionsInViewChanged="Hub_OnSectionsInViewChanged">
            <Hub.HeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
						    <Run Text="Code"/>
                        </TextBlock>
                        <TextBlock Foreground="DarkRed">
						    <Run Text="Fest"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </Hub.HeaderTemplate>

            <HubSection Width="Auto"
                        Header="{Binding DaysSectionTitle}"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>
                    <ListView Margin="0,9.5,0,0"
                              ItemsSource="{Binding Days}"
                              ItemTemplate="{StaticResource ManyImagesTileWithTitleItemTemplate}"
                              IsItemClickEnabled="True"
                              ItemClick="DaysGrid_OnItemClick"/>
                </DataTemplate>
            </HubSection>

            <HubSection Width="Auto"
                        Header="{Binding TracksSectionTitle}"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>
                    <ListView Margin="0,9.5,0,0"
                              ItemsSource="{Binding Tracks}"
                              ItemTemplate="{StaticResource TrackItemDataTemplate}"
                              IsItemClickEnabled="True"
                              ItemClick="TracksListView_OnItemClick"/>
                </DataTemplate>
            </HubSection>

            <HubSection Header="{Binding CurrentLecturesSectionTitle}" 
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}"> 
                <DataTemplate>
                    <ListView x:Name="Sections"
                                IsItemClickEnabled="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,27.5">
                                    <TextBlock Text="{Binding Title}" 
                                               Style="{ThemeResource ListViewItemTextBlockStyle}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton Label="лента"  Command="{Binding NavigateToTwitterFeedCommand}">
                    <AppBarButton.Icon>
                        <BitmapIcon UriSource="{Binding TwitterIcon}"/>
                    </AppBarButton.Icon>
                </AppBarButton>
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>